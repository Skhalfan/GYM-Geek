<h1><%= exercise.exercise %></h1>

<form method="POST" action="/bodypart/update"> 
<br>
<div class="form-group">
    <label>Sets</label>
    <input type="number" name="sets" class="form-control" value="<%= exercise.sets %>">
</div>

<div class="form-group">
    <label> Repetitions </label>
    <input type="number" name="reps" class="form-control" value="<%= exercise.reps %>">
</div>

<div class="form-group">
    <label>Weights</label>
    <input type="number" name="weight" class="form-control" value="<%= exercise.weight %>">
</div>
<br>
<input type="hidden" name="id" value="<%= exercise._id %>"/>
<button type="submit" class="btn btn-primary">Save</button>
</form>